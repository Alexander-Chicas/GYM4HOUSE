<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/ivRecipeDetailImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_gym"
        android:alpha="0.8"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_overlay" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="#4D000000"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        android:elevation="10dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="260dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="#121212"
        android:padding="24dp">
        <TextView
            android:id="@+id/tvRecipeDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pollo al Lim贸n Fit"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganancia Muscular"
            android:textColor="#FF9800"
            app:chipBackgroundColor="#1AFF9800"
            app:chipStrokeColor="#FF9800"
            app:chipStrokeWidth="1dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:baselineAligned="false">

            <include layout="@layout/item_macro_card"
                android:id="@+id/macroCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space android:layout_width="8dp" android:layout_height="match_parent"/>

            <include layout="@layout/item_macro_card"
                android:id="@+id/macroProtein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space android:layout_width="8dp" android:layout_height="match_parent"/>

            <include layout="@layout/item_macro_card"
                android:id="@+id/macroCarbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="24dp"/>

        <TextView
            android:text="Ingredientes"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvIngredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 200g Pechuga de pollo\n- 1 Lim贸n\n- Sal y Pimienta"
            android:textColor="#B3FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="24dp"/>

        <TextView
            android:text="Preparaci贸n"
            android:textColor="#00E676"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Cortar el pollo en cubos.\n2. Marinar con lim贸n.\n3. Cocinar a la plancha."
            android:textColor="#E6FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="12dp"
            android:paddingBottom="40dp"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>